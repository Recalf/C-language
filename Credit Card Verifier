#include <stdio.h>


int ccn_number(long a);
long lu(long b);

int main (void)
{
    long int ccn;
    print("type the credit card number: ");
    scanf("&l", ccn);
    int num = ccn_number(ccn);

    if (num == 13 || num == 15 || num == 16)
    {
        long d = lu(ccn);
        if (d % 10 == 0)
        {
            if ( (ccn > 34e13 && ccn < 35e13) || (ccn > 37e13 && ccn < 38e13) )
            {
                printf("AMEX\n");
            }
            else if (ccn > 51e14 && ccn < 56e14 )
            {
                printf("MASTERCARD\n");
            }
            else if ((ccn > 4e12 && ccn < 5e12) || (ccn > 4e15 && ccn < 5e15))
            {
                printf("VISA\n");
            }
            else
            {
                printf("INVALID\n");
            }
        }
        else
        {
            printf("INVALID\n");
        }
    }
    else
        printf("INVALID\n");
}





// calculate how many numbers in the ccn

int ccn_number(long a)
{
    int nums = 0;
    for(int i=0; a != 0; a /= 10, i++)
    {
        nums++;
    }

    return nums;

}


// luhn's algorithm

long lu(long b)
{
    long sum = 0;
    long c = 0;
    for(int j = 0; b > 0 ; b /= 10, j++)
    {
        if (j % 2 == 0)
        {
            sum += b % 10;
        }
        else
        {
            c += 2*(b % 10);
            sum += (2*(b % 10) / 10) + (2*(b % 10) % 10);
        }

    }
    return sum;
}
